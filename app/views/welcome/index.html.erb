  <div class="row-fluid col-md-12">
    <div class= "col-md-2">  
      <h3 style="color: #046380; font-family:Leckerli One;">Recent</h3>      
      <a href="/most_popular"><h3 style="color: #046380; font-family: Leckerli One;">Most Popular</h3></a>
      <h3 style="color: #046380; font-family: Leckerli One;">Top Gems</h3>
    </div>   
    
    <div id="container-fluid">
      <div class="col-md-10">
        <ul class="thumbnails list-unstyled item">
          <% @videos.each do |video| %>
            <div class="item" id="videos">
              <li class="col-md-4">
                <div class="thumbnail img-polaroid"> 
                  <%= raw youtube_embed(video.video_link)%>
                        
                        <% if current_user &&  current_user.voted_for?(@items.find(video.id))%>
                          <%= button_to "Thanks!", video_vote_up_path(video.id), class: "btn btn-sm btn-success disabled" %>
                        <% else %>
                          <%= button_to "Dope", video_vote_up_path(video.id), class: "btn btn-sm  btn-success" %>
                        <% end %> 
                      
                        <% if current_user &&  current_user.voted_against?(@items.find(video.id)) %>
                          <%= button_to "Thanks", video_vote_down_path(video.id), class: "btn btn-sm btn-danger disabled", style: "display: inline;" %>
                        <% else %>
                          <%= button_to "Nope", video_vote_down_path(video.id), class: "btn btn-sm btn-danger", style: "display: inline;" %>
                        <% end %>  

                    <div class="caption well">
                      <span><%= "Artist: #{video.artist}" %></span><br>
                      <%= "Song: #{video.song}"%><br>
                      <%= "Found by: #{video.submitted_by}"%><br></span>
                      <em><%= "Votes: #{video.votes_for}"%></em><br></span>
                      <%= link_to "0 Comments", 
                      video_path(video, :anchor => "disqus_thread"), 
                     :"data-disqus-identifer" => video.id %><br>
                    </div>  
 
                </div>
              </li>               
            </div> 
          <% end %>
         </ul>
        <%= will_paginate @videos%>
      </div>
    </div>  
  </div>            


