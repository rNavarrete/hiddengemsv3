  
<div class="row col-md-1">
  <h3 style="font-family: Leckerli One; color: black;"><%= link_to "Most Recent", root_path %></h3>
  <% if user_signed_in? %>
    <h3 style="font-family: Leckerli One; color: lightblue;"><%= link_to "Signout", destroy_user_session_path, :method => "delete"%></h3>
  <% else %>
    nil
  <% end %>  
</div>  
  <div class="row-fluid col-md-12">
    <div id="container-fluid">
      <div class="col-md-10 col-md-offset-1">
        <ul class="thumbnails list-unstyled item">

        <% if @search.nil? %>
            <h1 style="font-family: Leckerli One; color: black; "> Most Popular </h1>
          <% else %>
            <h2 style="font-family: Leckerli One; color: black; ">Search Results</h2>      
          <% end%>

        <% @videos.each do |video| %>

          <div class="item">

            <li class="col-md-4">

              <div class="thumbnail img-polaroid"> 

                <%= raw youtube_embed(video.video_link)%>
                 
                <div class="caption well">  
                  <% if current_user &&  current_user.voted_for?(@items.find(video.id)) %>
                          <%= button_to "Thanks!", video_vote_up_path(video.id), class: "btn btn-sm btn-success disabled"  %>
                        <% else %>
                          <%= button_to "Dope", video_vote_up_path(video.id), class: "btn btn-sm btn-success" %>
                        <% end %> 
                        <% if current_user &&  current_user.voted_against?(@items.find(video.id)) %>
                          <%= button_to "Thanks!", video_vote_down_path(video.id), class: "btn btn-sm btn-danger disabled" %>
                        <% else %>
                          <%= button_to "Nope", video_vote_down_path(video.id), class: "btn btn-sm btn-danger"%>
                        <% end %> 
                  <span><%= "Artist: #{video.artist}" %></span><br>
                  <%= "Song: #{video.song}"%><br>
                  <%= "Found by: #{video.submitted_by}"%><br></span>
                  <%= "Votes: #{video.votes_for}"%><br></span>
                      <%= link_to "0 Comments", 
                      video_path(video, :anchor => "disqus_thread"), 
                     :"data-disqus-identifer" => video.id %><br>
                </div>  
              </div>             
            </li>
          </div>  
        <% end %>
      </ul>
    <%= will_paginate @videos%>
    </div>
  </div>  
</div>            
